@page "/beneficiari"

@attribute [Authorize]

<PageTitle>Beneficiari</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Beneficiari" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@beneficiaris" LoadData="@Grid0LoadData" Count="@count" TItem="VersaControl.Server.Models.versacontrol.Beneficiari" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="NumeCompanie" Title="Nume Companie">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Cui" Title="Cui">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="AdresaMailOffice" Title="Adresa Mail Office">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Adresa" Title="Adresa">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Reprezentant" Title="Reprezentant">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="NrTelefon" Title="Nr Telefon">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Property="Roluri.Nume" Title="Roluri">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="VersaControl.Server.Models.versacontrol.Beneficiari" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="beneficiari">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, beneficiari)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
